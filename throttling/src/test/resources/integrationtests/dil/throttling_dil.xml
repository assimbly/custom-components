<dil>
    <integrations>
        <integration>
            <flows>
                <flow>
                    <id>queuethrottle_test1</id>
                    <name>queuethrottle_test1</name>
                    <type>esb</type>
                    <steps>
                        <step>
                            <id>1</id>
                            <type>source</type>
                            <uri>https://0.0.0.0:9001/1/throttling</uri>
                        </step>
                        <step>
                            <id>2</id>
                            <type>action</type>
                            <uri>setbody:sometext</uri>
                        </step>
						<step>
                            <id>3</id>
                            <type>action</type>
							<links>
                                <link>
                                    <id>mythrottlequeue</id>
                                    <transport>activemq</transport>
                                    <bound>out</bound>
                                    <pattern>event</pattern>
                                </link>
                            </links>
                        </step>
						<step>
                            <id>4</id>
                            <type>action</type>
                            <uri>queuethrottle:mythrottlequeue</uri>
							<options>
								<timePeriod>5000</timePeriod>
								<maxRequests>1</maxRequests>
							</options>
                            <links>
                                <link>
                                    <id>queuethrottle_test1-5</id>
                                    <transport>activemq</transport>
                                    <bound>out</bound>
                                    <pattern>event</pattern>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>5</id>
                            <type>sink</type>
                            <uri>log</uri>
                            <links>
                                <link>
                                    <id>queuethrottle_test1-5</id>
                                    <transport>activemq</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                    </steps>
                </flow>
            </flows>
        </integration>
    </integrations>
</dil>