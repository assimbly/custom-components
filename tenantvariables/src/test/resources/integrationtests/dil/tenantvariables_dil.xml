<dil>
    <integrations>
        <integration>
            <flows>
                <flow>
                    <id>tenantvariables_test1</id>
                    <name>tenantvariables_test1</name>
                    <type>esb</type>
                    <steps>
                        <step>
                            <id>1</id>
                            <type>source</type>
                            <uri>https://0.0.0.0:9001/1/tenantvariables</uri>
                        </step>
                        <step>
                            <id>2</id>
                            <type>action</type>
                            <uri>tenantvariables://MyVariable</uri>
                            <options>
                                <operation>SET</operation>
                                <value>RAW(dGVzdA==)</value>
                                <encrypt>false</encrypt>
                                <modifier>ComponentsTests/GetVariable</modifier>
                                <environment>test</environment>
                                <tenant>default</tenant>
                            </options>
                        </step>
                        <step>
                            <id>3</id>
                            <type>action</type>
                            <uri>tenantvariables://MyVariable</uri>
                            <options>
                                <operation>GET</operation>
                                <header>MyVariable</header>
                                <environment>test</environment>
                                <tenant>default</tenant>
                            </options>
                        </step>
                        <step>
                            <id>4</id>
                            <type>action</type>
                            <uri>log</uri>
                        </step>
                        <step>
                            <id>5</id>
                            <type>action</type>
                            <uri>tenantvariables://MyVariable</uri>
                            <options>
                                <operation>DELETE</operation>
                                <environment>test</environment>
                                <tenant>default</tenant>
                            </options>
                        </step>
                        <step>
                            <id>6</id>
                            <type>sink</type>
                            <uri>velocity:MyVariable: ${header.MyVariable}</uri>
                        </step>
                    </steps>
                </flow>
            </flows>
        </integration>
    </integrations>
</dil>